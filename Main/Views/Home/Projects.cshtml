@using System.Text
@using Main.Models


@*@model List<Project>*@
@model GithubUser
@{
    ViewBag.Title = "Projects";

}
<div>
    <div class="page-header">
        <div class="alert alert-warning">
            <span class="glyphicon glyphicon-warning-sign"></span>
            This page is going under a total re-write at the moment. If you don't like what you see now, wait 5 minutes.
        </div>
        <div class="row">
            <div class="col-lg-12">
                <img src="../../Images/doesnt-work.jpg" class="img-responsive"/>
            </div>
        </div>


        <h1>My current and past projects</h1>
    </div>
    @foreach (var item in Model.FilteredRepos)
    {
        <div class="row">
            <div class="col-lg-12" style="text-align: left; vertical-align: bottom">
                <h2>@Html.ActionLink(@item.name, "ProjectDetail", new { projectName = @item.name }, "Home")</h2>
                <h4>@item.description</h4>
            </div>
        </div>
    }
</div>