@using System.Text
@using Main.Models


@*@model List<Project>*@
@model GithubUser
@{
    ViewBag.Title = "Projects";

}
<div>
    <div class="page-header">
        <h1>My current and past projects</h1>
    </div>
    @foreach (var item in Model.FilteredRepos)
    {
        <div class="row">
            <div class="col-lg-6" style="text-align: left; vertical-align: bottom">
                <h2>@Html.ActionLink(@item.name, "ProjectDetail", new { projectName = @item.name }, "Home")</h2>
            </div>
            <div class="col-lg-6" style="text-align: left; vertical-align: bottom">
                <h4>@item.description</h4>
            </div>
        </div>
    }
</div>